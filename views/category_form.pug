extends layout 

block content 
  h1=title 

  form(method='POST' action='')
    div.form-group
      label(for='name') Category Name: 
      input#name(type='text' placeholder='Category Name' name='name' required='true' value=(undefined===category ? '' : category.name))
    button.btn(type='submit') Submit 
  if errors 
    ul 
      for error in errors   
        li!= error.msg
